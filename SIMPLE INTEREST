#include <stdio.h>

int main()
{
 //si=(p*t*r)/100
    int p,t,r;
    //i9nput of principal value
    printf("enter the principal value");
    scanf("%i",&p);
    //input of time
    printf("enter time(in year)");
    scanf("%i",&t);
    //input of rate
    printf("enter the rate of interest");
    scanf("%i",&r);
    
    //calculating simple interest
    float si=(p*t*r)/100;
    printf("simple interest =%.3f",si);
    

    return 0;
}

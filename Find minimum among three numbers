#include <stdio.h>

int main()
{   int num1,num2,num3;

    printf("enter the value of num1 : ");
    scanf("%d",&num1);
    
    printf("enter the value of num2 : ");
    scanf("%d",&num2);
    
    printf("enter the value of num3 : ");
    scanf("%d",&num3);
    
    //**finding the minimum number in three numbers**//
    if (num1<num2 & num1<num3)
    
        {
            printf("num1 is the minimum number ");
        }
    else if (num2<num3 & num2<num1)    
    
    {
        printf("num2 is the minimum number ");
    }
    else 
    
    {
        printf("num3 is the minimum number ");
    }

    return 0;
}


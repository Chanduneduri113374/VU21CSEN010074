#include<stdio.h>
void power_of_number(){
    int number, power;
    long double result = 1.0;
    printf("Enter a number: ");
    scanf("%d", &number);
    printf("Enter an power of: ");
    scanf("%d", &power);

    while (power  != 0) {
        result *= number;
        --power;
    }
    printf("Answer = %.0Lf", result);
}
int main (void){
 power_of_number();
}
